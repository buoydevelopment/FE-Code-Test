<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/main_nav_graph"
            app:startDestination="@id/homeFragment"
            tools:ignore="UnusedNavigation">

    <fragment android:id="@+id/homeFragment" android:name="com.buoy.codetest.ui.home.HomeFragment"
              android:label="HomeFragment">

        <action android:id="@+id/action_homeFragment_to_cocktailDetailFragment"
                app:destination="@id/cocktailDetailFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"/>

    </fragment>

    <fragment android:id="@+id/cocktailDetailFragment"
              android:name="com.buoy.codetest.ui.cocktaildetail.CocktailDetailFragment"
              android:label="CocktailDetailFragment" />

</navigation>