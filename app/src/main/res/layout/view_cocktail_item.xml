<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="4dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cocktail_name"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:gravity="top"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/cocktail_image"
                android:text="Fernet con coca" />

            <LinearLayout
                android:id="@+id/moreInfoSection"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/cocktail_name"
                android:layout_toLeftOf="@+id/cocktail_image"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewIngredient1"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textViewIngredient2"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="16sp"
                    android:id="@+id/textViewIngredientMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:id="@+id/cocktail_image"
                android:layout_width="150dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:layout_margin="15dp"
                android:layout_height="150dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>