<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <RelativeLayout
       android:id="@+id/leftHalfCard"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:orientation="horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

    <TextView
        android:id="@+id/drinkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeMaxTextSize="32sp"
        app:autoSizeStepGranularity="1sp"
        tools:text="Greates mojito rocks"/>

    <TextView
        android:id="@+id/firstIngredient"
        android:layout_below="@+id/drinkName"
        android:layout_alignStart="@+id/drinkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="\u2022  first bullet"/>


    <TextView
        android:id="@+id/secondIngredient"
        android:layout_below="@+id/firstIngredient"
        android:layout_alignStart="@+id/firstIngredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="\u2022  second bullet"/>

    <TextView
        android:id="@+id/moreIngredients"
        android:layout_below="@+id/secondIngredient"
        android:layout_alignStart="@id/secondIngredient"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="and 4 more ingredients"/>
   </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rightHalfCard"
        android:layout_toEndOf="@+id/leftHalfCard"
        android:layout_alignTop="@+id/leftHalfCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/drinkImage"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:layout_alignParentEnd="true"
        tools:src="@drawable/test_drink_image"
        android:contentDescription="@string/drink_image" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>